#!/bin/sh
# System action menu via dmenu

choice="$(printf "ğŸ”’ Lock\nğŸšª Logout\nğŸ”„ Reboot\nâ» Shutdown\nğŸ’¤ Suspend\nğŸ“º Display off" | dmenu -i -p "Action:")"

case "$choice" in
	*Lock) slock ;;
	*Logout) pkill -TERM dwm ;;
	*Reboot) sudo reboot ;;
	*Shutdown) sudo poweroff ;;
	*Suspend) sudo zzz ;;
	*Display*) xset dpms force off ;;
esac
