#!/bin/sh

# Displays number of unread mail and an loading icon if updating.
# When clicked, brings up `neomutt`.

btn="${BUTTON:-${BLOCK_BUTTON:-0}}"

sync_mail() {
	if command -v mw >/dev/null 2>&1; then
		setsid -f mw -Y >/dev/null
	elif command -v mbsync >/dev/null 2>&1; then
		setsid -f mbsync -a >/dev/null
	else
		notify-send "Mail sync" "Install mw or mbsync."
		return
	fi
	pkill -RTMIN+12 "${STATUSBAR:-dwmblocks}"
}

case "$btn" in
	1)
		if command -v neomutt >/dev/null 2>&1; then
			setsid -w -f "$TERMINAL" -e neomutt
			pkill -RTMIN+12 "${STATUSBAR:-dwmblocks}"
		else
			notify-send "Mail" "neomutt not installed."
		fi
		;;
	2) sync_mail ;;
	3) notify-send "ğŸ“¬ Mail module" "\- Shows unread mail
- Shows ğŸ”ƒ if syncing mail
- Left click opens neomutt
- Middle click syncs mail" ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

unread="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)"

pidof mbsync >/dev/null 2>&1 && icon="ğŸ”ƒ"

[ "$unread" = "0" ] && [ "$icon" = "" ] || echo "ğŸ“¬$unread$icon"
